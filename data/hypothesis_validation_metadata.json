{
  "experiment_metadata": {
    "name": "NEUROMODE Hypothesis Validation Dataset Extended",
    "version": "2.0.0",
    "creation_date": "2025-10-05",
    "total_conditions": 90000,
    "validated_scientifically": true,
    "biological_realism": "maximum",
    "computational_requirements": {
      "estimated_runtime_hours": 360,
      "memory_gb": 64,
      "storage_tb": 2,
      "cores_recommended": 32
    }
  },
  
  "experimental_design": {
    "factorial_design": "12 × 25 × 15 × 20",
    "factors": {
      "developmental_profiles": {
        "levels": 12,
        "range": ["NOURRISSON", "PETITE_ENFANCE", "PRESCOLAIRE", "ENFANCE_PRECOCE", "ENFANCE_TARDIVE", "PREADOLESCENCE", "ADOLESCENCE_PRECOCE", "ADOLESCENCE_TARDIVE", "JEUNE_ADULTE", "ADULTE_JEUNE", "ADULTE_MOYEN", "ADULTE_MATURE"],
        "description": "Stades de développement neuronal complets",
        "biological_meaning": "Sensibilité plastique selon l'âge développemental"
      },
      "assistance_levels": {
        "levels": 25,
        "range": [0.00, 0.04, 0.08, 0.12, 0.16, 0.20, 0.24, 0.28, 0.32, 0.36, 0.40, 0.44, 0.48, 0.52, 0.56, 0.60, 0.64, 0.68, 0.72, 0.76, 0.80, 0.84, 0.88, 0.92, 0.96],
        "description": "Niveaux d'assistance IA granulaires (Ω)",
        "unit": "ratio [0,1]",
        "biological_meaning": "Proportion de charge cognitive externalisée"
      },
      "adaptive_profiles": {
        "levels": 15,
        "range": ["SUPER_ADAPTATEUR", "ADAPTATEUR_ELITE", "ADAPTATEUR_OPTIMAL", "ADAPTATEUR_EFFICACE", "ADAPTATEUR_STANDARD", "ADAPTATEUR_FRAGILE", "ADAPTATEUR_VULNERABLE", "ADAPTATEUR_CRITIQUE", "ADAPTATEUR_DEFICIENT", "SPRINTER_PLASTIQUE", "MARATHONIEN_PLASTIQUE", "OSCILLATEUR_PLASTIQUE", "ECONOMISEUR_METABOLIQUE", "EXPLORATEUR_PLASTIQUE", "CONSERVATEUR_PLASTIQUE"],
        "description": "Profils adaptatifs individuels",
        "biological_meaning": "Capacités d'adaptation constitutionnelles"
      },
      "random_seed": {
        "range": [1, 20],
        "description": "Graines aléatoires pour reproductibilité",
        "n_repetitions": 20,
        "validation": "bit-à-bit confirmée"
      }
    }
  },
  
  "dependent_variables": {
    "primary_metrics": {
      "ODI": {
        "full_name": "Offloading Dependency Index",
        "formula": "Ω × |ρ_post - ρ_pre|",
        "range": [0.0, 1.0],
        "interpretation": "Indice de dépendance à l'assistance externe",
        "clinical_thresholds": {
          "low_risk": "< 0.05",
          "moderate_risk": "0.05 - 0.10",
          "high_risk": "> 0.10"
        }
      },
      "PDI": {
        "full_name": "Plasticity Dependency Index",
        "formula": "σ(ρ_post) / μ(ρ_post)",
        "range": [0.0, 2.0],
        "interpretation": "Instabilité de la plasticité synaptique",
        "biological_meaning": "Coefficient de variation de la densité post-offloading"
      },
      "CLI": {
        "full_name": "Cognitive Load Index",
        "formula": "(g_NE_baseline - g_NE_final) / g_NE_baseline",
        "range": [-1.0, 1.0],
        "interpretation": "Réduction de charge cognitive",
        "biological_meaning": "Changement relatif de neuromodulation LC-NE"
      },
      "AEI": {
        "full_name": "Adaptation Efficiency Index",
        "formula": "|slope(ρ_adaptation)| × 1000",
        "range": [0.0, 1.0],
        "interpretation": "Efficacité d'adaptation aux changements",
        "biological_meaning": "Vitesse d'ajustement plastique"
      }
    },
    
    "neural_metrics": {
      "final_synaptic_density": {
        "description": "Densité synaptique finale",
        "range": [0.01, 0.5],
        "unit": "proportion",
        "biological_constraint": "Densité corticale physiologique"
      },
      "final_firing_rate_e": {
        "description": "Taux de décharge excitateur final",
        "range": [0.1, 100.0],
        "unit": "Hz",
        "biological_constraint": "Activité neuronale physiologique"
      },
      "final_firing_rate_i": {
        "description": "Taux de décharge inhibiteur final",
        "range": [0.1, 100.0],
        "unit": "Hz",
        "biological_constraint": "Activité interneurones"
      },
      "mean_neuromodulation": {
        "description": "Niveau moyen de neuromodulation LC-NE",
        "range": [0.5, 1.5],
        "unit": "arbitrary units",
        "biological_meaning": "Tonus noradrénergique"
      }
    }
  },
  
  "hypotheses_tested": {
    "H1_offloading_reduces_plasticity": {
      "statement": "L'offloading cognitif réduit l'effort endogène et la plasticité synaptique",
      "predictions": [
        "Corrélation positive Ω ↔ ODI (r > 0.5)",
        "Corrélation négative Ω ↔ Neuromodulation (r < -0.3)",
        "Corrélation positive Ω ↔ CLI (r > 0.8)"
      ],
      "statistical_tests": ["correlation", "t-test contrôle vs maximum"],
      "validation_criteria": "Toutes les prédictions significatives (p < 0.001)"
    },
    
    "H2_timing_modulation": {
      "statement": "Cette réduction est modulée par le timing d'introduction (fenêtres critiques)",
      "predictions": [
        "Effet timing × offloading sur ODI",
        "Impact plus fort pour t₀ précoce",
        "Différence significative timing précoce vs tardif"
      ],
      "statistical_tests": ["ANOVA interaction", "comparaisons post-hoc"],
      "validation_criteria": "Interaction significative + effet directionnel"
    },
    
    "H3_dose_dependent_effects": {
      "statement": "Les changements adaptatifs varient selon l'intensité et la durée d'utilisation",
      "predictions": [
        "Relation dose-réponse Ω ↔ ODI (r > 0.7)",
        "Non-linéarité (R² quadratique > R² linéaire)",
        "Effets de seuil à Ω = 0.3 et 0.6"
      ],
      "statistical_tests": ["régression linéaire", "régression quadratique", "analyse de seuils"],
      "validation_criteria": "Relation forte + amélioration non-linéaire"
    },
    
    "H4_neuromodulation_mediation": {
      "statement": "Des mécanismes neuromodulateurs (LC-NE) médient ces effets",
      "predictions": [
        "Ω → Neuromodulation (r < -0.5)",
        "Neuromodulation → ODI (r < -0.3)",
        "Médiation > 20% de l'effet total"
      ],
      "statistical_tests": ["analyse de médiation", "régression multiple"],
      "validation_criteria": "Chaîne causale complète + médiation substantielle"
    }
  },
  
